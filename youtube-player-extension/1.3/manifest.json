
{
  "manifest_version": 3,
  "name": "YouTube Player Controls Pro With Proxy",
  "version": "1.3",
  "description": "Advanced YouTube controls with PiP, tabs & favourite video management and proxy",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "system.display",
    "windows",
    "downloads",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["pip-styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./images/icon16.jpg"
    }
  },
  "commands": {
    "toggle-play-pause": {
      "description": "Play/Pause video",
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      }
    },
    "toggle-pip": {
      "description": "Toggle Picture-in-Picture",
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      }
    },
    "show-modal": {
      "suggested_key": {
        "default": "Alt+M",
        "mac": "Command+M"
      },
      "description": "Show extension modal"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}